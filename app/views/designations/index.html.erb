<div class="row">
  <div class="col-md-8">
    <%= render 'layouts/header', title: "Designations" %>
    
    <p><%= link_to 'New Designation', new_designation_path, class: "btn btn-primary" %></p>
    
    <table class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th class="col-sm-9">Name</th>
          <th class="col-sm-3">Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @designations.each do |designation| %>
          <tr>
            <td><%= designation.name %></td>
            <td>
              <%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_designation_path(designation) %>&nbsp;
              <%= link_to '<i class="fa fa-times"></i> Delete'.html_safe, designation, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
    


