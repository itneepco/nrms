<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :mid_name, label: "Middle Name" %>
    <%= f.input :last_name %>
    <%= f.association :designation, collection: Designation.order(:name) %><br>
    <%= f.input :department %>
    <%= f.association :project, collection: Project.order(:name) %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, collection: User::USER_ROLES %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  
<% end %>
