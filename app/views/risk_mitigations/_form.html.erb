<%= simple_form_for(@risk_mitigation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :risk_register_id, as: :hidden, input_html: { value: @risk_mitigation.risk_register.id } %>
    <%= f.input :mitigation_step %><br>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
