$('#update_status').bind('ajax:success', function(){
  $(this).removeClass();
  $(this).addClass('<%= button_class(@risk_register) %>');
  $('#status').removeClass();
  $('#status').text('<%= mitigation_status(@risk_register) %>');
  $('#status').addClass('<%= mitigation_status_class(@risk_register) %>');
  <% if @risk_register.status? %>
    $('.show-btn').hide();
  <% else %>
    $('.show-btn').show();
  <% end %>
});