<div class="row">
  <div class="col-md-8">
    <%= render 'layouts/header', title: "Categories" %>
    
    <p><%= link_to 'New Category', new_category_path, class: "btn btn-primary" %></p>
    
    <table class="table table-condensed table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to 'Edit', edit_category_path(category) %>&nbsp;
              <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

    



