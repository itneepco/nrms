<h1>Dashboard</h1>
<ul>
    <% if sysadmin? || corporate_rm? %>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "Designations", designations_path %></li>
      <li><%= link_to "Project", projects_path %></li>
      <li><%= link_to "Categories", categories_path %></li>
    <% end %>
    
    <% if sysadmin? %>  
      <li>Projects
        <ul>
          <% Project.all.each do |project| %>
              <li><%= link_to "#{project.name}", project_risk_registers_path(project) %></li>
          <% end %>
        </ul>
      </li>
    <% else %>
      <li><%= link_to "Risk Registers", project_risk_registers_path(current_user.project) %></li>
    <% end %> 
    
    <li><%= link_to "Risk Mitigations", risk_mitigations_path %></li>
</ul>
