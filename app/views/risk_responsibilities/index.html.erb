<p id="notice"><%= notice %></p>

<h1>Listing Risk Responsibilities</h1>

<table>
  <thead>
    <tr>
      <th>Risk register</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @risk_responsibilities.each do |risk_responsibility| %>
      <tr>
        <td><%= risk_responsibility.risk_register %></td>
        <td><%= risk_responsibility.user %></td>
        <td><%= link_to 'Show', risk_responsibility %></td>
        <td><%= link_to 'Edit', edit_risk_responsibility_path(risk_responsibility) %></td>
        <td><%= link_to 'Destroy', risk_responsibility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

