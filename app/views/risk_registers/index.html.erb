<p id="notice"><%= notice %></p>

<h1>Listing Risk Registers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Risk no</th>
      <th>Project</th>
      <th>Description</th>
      <th>Probability</th>
      <th>Impact</th>
      <th>Created By</th>
      <th>Target date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @risk_registers.each do |risk_register| %>
      <tr>
        <td><%= risk_register.risk_no %></td>
        <td><%= risk_register.project.name %></td>
        <td><%= risk_register.description %></td>
        <td><%= risk_register.probability %></td>
        <td><%= risk_register.impact %></td>
        <td><%= risk_register.user.email %></td>
        <td><%= risk_register.target_date %></td>
        <td><%= risk_register.status %></td>
        <td><%= link_to 'Show', risk_register %></td>
        <td><%= link_to 'Edit', edit_risk_register_path(risk_register) %></td>
        <td><%= link_to 'Destroy', risk_register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

