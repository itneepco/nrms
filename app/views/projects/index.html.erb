<div class="row">
  <div class="col-md-8">
    <%= render 'layouts/header', title: "Projects" %>
    
    <p><%= link_to 'New Project', new_project_path, class: "btn btn-primary" %></p>
    
    <table class="table table-condensed table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Full Name & Location</th>
          <th>Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.full_name %></td>
            <td>
              <%= link_to 'Edit', edit_project_path(project) %>&nbsp;
              <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
    



