<div class="row" id="header-breadcrumb">
  <div class="col-md-12">
      <h2 class="page-header">
        <% if controller.controller_name == 'dashboard' %>
          Dashboard
        <% else %>
          <%= title %>
        <% end %>
      </h2>
      <ol class="breadcrumb">
          <li>
              <i class="fa fa-dashboard"></i> <a href="<%= root_path %>">Dashboard</a>
          </li>
          
          <% if controller.controller_name == "risk_mitigations" && controller.action_name != "pending_list" && controller.action_name != "completed_list" %>
            <li><i class="fa fa-share"></i> <%= link_to "Risk Assignments", mitigation_pending_list_path %></li>
          <% end %>
          
          <% if controller.controller_name == "risk_registers" && controller.action_name != "approved_list" && controller.action_name != "index" && controller.action_name != "completed_list"%>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-share"></i> Risk Register <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Approved List", project_approved_list_path(@project) %></li>
                <li><%= link_to "Unapproved List", project_risk_registers_path(@project) %></li>
                <li><%= link_to "Completed List", project_completed_list_path(@project) %></li>
              </ul>
            </li>  
          <% end %>
          
          <% if controller.controller_name == "categories" && controller.action_name != "index" %>
            <li><i class="fa fa-share"></i> <%= link_to "Categories", categories_path %></li>  
          <% end %>
          
          <% if controller.controller_name == "designations" && controller.action_name != "index" %>
            <li><i class="fa fa-share"></i> <%= link_to "Designations", designations_path %></li>  
          <% end %>
          
          <% if controller.controller_name == "projects" && controller.action_name != "index" %>
            <li><i class="fa fa-share"></i> <%= link_to "Projects", projects_path %></li>  
          <% end %>
          
          <% if controller.controller_name == "users" && controller.action_name != "index" %>
            <li><i class="fa fa-share"></i> <%= link_to "Users", projects_path %></li>  
          <% end %>
          
          <% if controller.controller_name == "searches" && controller.action_name != "new" %>
            <li><i class="fa fa-share"></i> <%= link_to "Advance Search", new_search_path %></li>  
          <% end %>
          
          <% unless controller.controller_name == "dashboard" && controller.action_name == "index" %>
            <li class="active">
                <i class="fa fa-wrench"></i> <%= title %>
            </li>
          <% end %>
          
          <% if controller.controller_name == "risk_registers" %>
            <li class="pull-right">
              <i class="fa fa-building"></i> <%= @project.name %>
            </li>
          <% elsif controller.controller_name == "risk_mitigations" %>
            <li class="pull-right">
              <i class="fa fa-building"></i> <%= current_user.project.name %>
            </li>
          <% end %>
      </ol>
  </div>
</div>
